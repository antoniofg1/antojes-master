{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --no-dev --optimize-autoloader --no-interaction --prefer-dist && composer dump-autoload --optimize --classmap-authoritative"
  },
  "deploy": {
    "startCommand": "php bin/console cache:warmup --env=prod && php -S 0.0.0.0:$PORT -t public",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
